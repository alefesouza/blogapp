<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardUseCompatPadding="true" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:id="@+id/conteudo"
	android:background="@drawable/card"
    android:orientation="vertical"
    android:paddingBottom="@dimen/card_padding" >
	
	<net.aloogle.canais.demonstracao.other.CustomTextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:textColor="@color/colorAccent"
		android:layout_margin="10dp"
		android:layout_alignParentTop="true"
        android:textSize="16sp"
        app:fontName="Roboto-Bold.ttf"
	/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_below="@+id/titulo"
		android:layout_height="175dp"
		android:gravity="center">
		<com.gc.materialdesign.views.ProgressBarDeterminate
			android:id="@+id/progress"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorAccent"
		/>
	</LinearLayout>

	<ImageView
		android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="265dp"
		android:layout_below="@+id/titulo"
        tools:ignore="ContentDescription"
	/>

	<View 
        android:id="@+id/comentariosline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
		android:layout_below="@+id/image"
		android:background="#e0e0e0" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/commentsspace"
		android:layout_below="@+id/comentariosline"
		android:padding="10dp" >

		<ImageView
			android:id="@+id/likesicon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_likes"
			android:layout_alignParentLeft="true"
			tools:ignore="ContentDescription"
		/>
	
		<net.aloogle.canais.demonstracao.other.CustomTextView
			android:id="@+id/likes"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:layout_marginLeft="10dp"
			android:layout_toRightOf="@+id/likesicon"
			app:fontName="Roboto-Regular.ttf"
		/>

		<ImageView
			android:id="@+id/visualizacoesicon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_views"
			android:layout_marginRight="10dp"
			android:layout_toLeftOf="@+id/visualizacoes"
			tools:ignore="ContentDescription"
		/>
	
    <net.aloogle.canais.demonstracao.other.CustomTextView
        android:id="@+id/visualizacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textColor="#000000"
		android:layout_alignParentRight="true"
        app:fontName="Roboto-Regular.ttf"
	/>
	</RelativeLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>
