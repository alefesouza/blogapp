<Page
    x:Class="DropandoIdeias.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DropandoIdeias"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <CommandBar Name="CB" x:Uid="CB" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Grid.Row="0" Grid.Column="0">
            <CommandBar.Content>
                <TextBlock Text="Configurações" Name="CBTitle" FontWeight="Bold" Margin="12,14" TextTrimming="WordEllipsis" />
            </CommandBar.Content>
        </CommandBar>
        <Pivot x:Name="pivot" Margin="16">
            <PivotItem Header="Geral" Margin="16">
                <StackPanel>
                    <ToggleSwitch Header="Receber notificações" Name="NotifEnable" Toggled="NotifEnable_Toggled"></ToggleSwitch>
                </StackPanel>
            </PivotItem>
            <PivotItem Header="Sobre">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        <RichTextBlock FontSize="14">
                            <Paragraph>
                                <Bold FontSize="18">Site</Bold>
                                <LineBreak/>
                                Todos os direitos reservados por Dropando Ideias, este blog é protegido por uma licença
                                <Hyperlink NavigateUri="http://creativecommons.org/licenses/by-nc-nd/4.0/">Creative Commons (CC BY-NC-ND 4.0)</Hyperlink>, mais expecificações Creative Commons estão na página da
                                <Hyperlink NavigateUri="http://dropandoideias.com/politica">política</Hyperlink> do blog.
                                <LineBreak />
                                <LineBreak />
                                Para entrar em contato,
                                <Hyperlink NavigateUri="http://dropandoideias.com/contato">clique aqui</Hyperlink>.
                                <LineBreak />
                            </Paragraph>
                            <Paragraph>
                                <Bold FontSize="18">Aplicativo</Bold>
                                <LineBreak/>
                                <LineBreak/>
                                Aplicativo desenvolvido por
                                <Hyperlink NavigateUri="http://google.com/+AlefeSouza">Alefe Souza</Hyperlink>.
                                <LineBreak />
                                Quer ter uma versão desse aplicativo para seu blog, site ou canal do YouTube? Entre em contato
                                <Hyperlink NavigateUri="mailto:blogapp@apps.aloogle.net">clicando aqui</Hyperlink>!
                            </Paragraph>
                        </RichTextBlock>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
        </Pivot>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="CB.Margin" Value="48 0 0 0" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="660" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="CB.Margin" Value="0" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </StackPanel>
</Page>