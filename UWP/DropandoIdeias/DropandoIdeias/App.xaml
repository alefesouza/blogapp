<Application
    x:Class="DropandoIdeias.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DropandoIdeias"
    RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <Color x:Key="SystemAccentColor">#FF009e95</Color>

                    <SolidColorBrush x:Key="TitleBarBackgroundThemeBrush" Color="#FF222222" />
                    <SolidColorBrush x:Key="TitleBarButtonHoverThemeBrush" Color="#FF009e95" />
                    <SolidColorBrush x:Key="TitleBarButtonPressedThemeBrush" Color="#FF009e95" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
