<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="15dp"
	android:layout_marginLeft="@dimen/list_margin"
	android:layout_marginRight="@dimen/list_margin"
	app:cardUseCompatPadding="true" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:id="@+id/conteudo"
	android:background="@drawable/card"
    android:orientation="vertical"
    android:paddingBottom="@dimen/card_padding" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:id="@+id/head">
	
	<net.aloogle.apps.blogapp.other.CustomTextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textColor="#000000"
        android:textSize="20sp"
        app:fontName="OpenSans-Semibold.ttf"
	/>
	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/head"
		android:id="@+id/imagerelative">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="175dp"
		android:gravity="center">
		<ProgressBar
			android:id="@+id/progress"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/ProgressBarAppTheme"
		/>
	</LinearLayout>

	<ImageView
		android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/flexible_space_image_height"
        tools:ignore="ContentDescription"
	/>
</RelativeLayout>
	
	<net.aloogle.apps.blogapp.other.CustomTextView
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_below="@+id/imagerelative"
		android:textColor="#000000"
		android:layout_margin="15dp"
        app:fontName="Roboto-Regular.ttf" />

	<View 
        android:id="@+id/comentariosline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
		android:layout_below="@+id/descricao"
		android:background="#e0e0e0" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/commentsspace"
		android:background="@color/commentsCard"
		android:layout_below="@+id/comentariosline"
		android:padding="10dp" >
    <net.aloogle.apps.blogapp.other.CustomTextView
        android:id="@+id/comentarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textColor="#ffffff"
		android:layout_centerInParent="true"
        app:fontName="Verdana.ttf"
	/>
	</RelativeLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>
</FrameLayout>