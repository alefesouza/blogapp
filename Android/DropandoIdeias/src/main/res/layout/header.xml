<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="175dp">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:adjustViewBounds="true"
        android:fitsSystemWindows="false"
        android:scaleType="centerCrop"
        android:src="@drawable/drawer_logo"
        android:tint="#74000000" />

    <ImageView
        android:id="@+id/circularImageView1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="60dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher" />
	
	<net.aloogle.dropandoideias.other.CustomTextView
        android:id="@+id/myTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/myTextView2"
        android:layout_alignRight="@+id/myTextView2"
        android:layout_alignTop="@+id/circularImageView1"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/circularImageView1"
        android:layout_toRightOf="@+id/circularImageView1"
        android:gravity="top"
        android:text="@string/app_name"
        android:textColor="#fffafafa"
        android:textSize="14.0sp"
        app:fontName="Roboto-Medium.ttf" />

	<net.aloogle.dropandoideias.other.CustomTextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/myTextView1"
		android:layout_marginLeft="8dp"
        android:id="@+id/myTextView2"
        android:layout_toEndOf="@+id/circularImageView1"
        android:layout_toRightOf="@+id/circularImageView1"
        android:text="@string/blog_description"
        android:textColor="#ffe5e5e5"
        android:textSize="14.0sp"
        app:fontName="Roboto-Regular.ttf" />
</RelativeLayout>
