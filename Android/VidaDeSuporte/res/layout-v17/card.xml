<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardUseCompatPadding="true" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:id="@+id/conteudo"
	android:background="@drawable/card"
    android:orientation="vertical"
    android:paddingBottom="@dimen/card_padding" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:id="@+id/head">
		
	<ImageView
		android:id="@+id/category"
        android:layout_width="50dp"
        android:layout_height="50dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
        tools:ignore="ContentDescription"
	/>
	
	<br.com.vidadesuporte.other.CustomTextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/category"
		android:textColor="#000000"
		android:layout_marginLeft="60dp"
        android:textSize="27sp"
        app:fontName="Special-Elite.ttf"
	/>
	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/head"
		android:id="@+id/imagerelative">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_below="@+id/titulo"
		android:layout_height="175dp"
		android:gravity="center">
		<com.gc.materialdesign.views.ProgressBarDeterminate
			android:id="@+id/progress"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorAccent"
		/>
	</LinearLayout>

	<ImageView
		android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:adjustViewBounds="true"
        tools:ignore="ContentDescription"
	/>
</RelativeLayout>
	
    <br.com.vidadesuporte.other.CustomTextView
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_below="@+id/imagerelative"
		android:textColor="#000000"
		android:layout_margin="15dp"
        app:fontName="Roboto-Regular.ttf"
	/>

	<View 
        android:id="@+id/comentariosline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
		android:layout_below="@+id/descricao"
		android:background="#e0e0e0" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/commentsspace"
		android:background="#1b1b1b"
		android:layout_below="@+id/comentariosline"
		android:padding="10dp" >
    <br.com.vidadesuporte.other.CustomTextView
        android:id="@+id/comentarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textColor="#ffffff"
		android:layout_centerInParent="true"
        app:fontName="Dosis-Light.otf"
	/>
	</RelativeLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>
