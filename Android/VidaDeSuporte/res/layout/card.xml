<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardUseCompatPadding="true" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:id="@+id/conteudo"
	android:background="@drawable/card"
    android:orientation="vertical"
    android:paddingBottom="@dimen/card_padding" >

	<br.com.vidadesuporte.other.CustomTextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:textColor="@color/colorAccent"
		android:layout_margin="10dp"
		android:layout_alignParentTop="true"
        android:textSize="16sp"
        app:fontName="Roboto-Bold.ttf"
	/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_below="@+id/titulo"
		android:layout_height="175dp"
		android:gravity="center">
		<com.gc.materialdesign.views.ProgressBarDeterminate
			android:id="@+id/progress"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorAccent"
		/>
	</LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
		android:scaleType="fitXY" />

    <br.com.vidadesuporte.other.CustomTextView
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_below="@+id/image"
		android:textColor="#000000"
		android:layout_margin="10dp"
        app:fontName="Roboto-Regular.ttf"
	/>

	<View
        android:id="@+id/comentariosline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
		android:layout_below="@+id/descricao"
		android:background="#e0e0e0" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/commentsspace"
		android:background="@drawable/card"
		android:layout_below="@+id/comentariosline"
		android:padding="10dp" >
    <br.com.vidadesuporte.other.CustomTextView
        android:id="@+id/comentarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textColor="@color/colorAccent"
		android:layout_alignParentRight="true"
        app:fontName="Roboto-Regular.ttf"
	/>
	</RelativeLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>
