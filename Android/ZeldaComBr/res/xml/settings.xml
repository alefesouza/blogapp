<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<PreferenceCategory android:title="@string/notifications">
        <CheckBoxPreference
            android:key="prefNotification"
            android:defaultValue="true"
            android:title="@string/pref_notification"
            android:summary="@string/pref_notification_summary" />
<ListPreference
            android:key="prefSound"
            android:defaultValue="item"
            android:entries="@array/sounds"
            android:entryValues="@array/soundsValues"
            android:title="@string/pref_sounds"
            android:summary="@string/pref_sounds_summary" />
</PreferenceCategory>
</PreferenceScreen>
